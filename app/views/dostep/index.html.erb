<div class="container admin_index">

  <div class="row admin-title">
    <div class="col-lg-12">
      <h1>Centrum zarządzania pracownikami</h1>
    </div>
  </div>

  <div class="row admin-data">
    <div class="col-lg-12">
      <table class="table table-striped">
        <tr class="info">
          <th>imie</th>
          <th>nazwisko</th>
          <th>stanowisko</th>
          <th>pokoj</th>
          <th>email</th>
          <th>wydzial</th>
          <th>staz pracy</th>
          <th>zdjecie</th>
          <th>opcje</th>
        </tr>
        <%@worker.each do |pracownik| %>
            <tr>
              <td><%=pracownik.imie %></td>
              <td><%=pracownik.nazwisko %></td>
              <td><%=pracownik.stanowisko %></td>
              <td><%=pracownik.pokoj %></td>
              <td><%=pracownik.email %></td>
              <td><%=pracownik.wydzial %></td>
              <td><%=pracownik.staz_pracy %></td>
              <td><%=image_tag pracownik.zdjecie.url, height: '100', width: '80' %></td>
              <td id="buttons_place">
                <%= link_to("Edytuj", {:controller => 'workers', :action => :edit, :id => pracownik.id}, class: 'btn btn-xs btn-success btn-worker-left') %>
                <%= link_to("Usuń", {:controller => 'workers', :action => :delete, :id => pracownik.id}, class: 'btn btn-xs btn-danger btn-worker-right') %>
              </td>

            </tr>
        <% end %>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12 button-new">
      <%= link_to("Dodaj nowego pracownika", {:controller => "workers", :action => "new"}, :class => "btn btn-large btn-info btn-index") %>
      <%= link_to("Wyloguj", {:action => "logout"}, :class => "btn btn-large btn-danger btn-index") %>
    </div>
  </div>
</div>