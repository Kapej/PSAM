<div class="container">

  <div class="row admin-title ">
    <div class="col-lg-12">
      <h1>Centrum zarządzania pracownikami</h1>
    </div>
  </div>

  <div class="row admin-data">
    <div class="col-lg-12">
      <table class="table table striped">
        <tr class="info">
          <th>imie</th>
          <th>nazwisko</th>
          <th>stanowisko</th>
          <th>pokoj</th>
          <th>email</th>
          <th>wydzial</th>
          <th>staz pracy</th>
          <th>zdjecie</th>
          <th>opcje</th>
        </tr>
        <%@worker. each do |pracownik| %>
            <tr>
              <td><%=pracownik.imie %></td>
              <td><%=pracownik.nazwisko %></td>
              <td><%=pracownik.stanowisko %></td>
              <td><%=pracownik.pokoj %></td>
              <td><%=pracownik.email %></td>
              <td><%=pracownik.wydzial %></td>
              <td><%=pracownik.staz_pracy %></td>
              <td><%=image_tag pracownik.zdjecie.url(:thumb) %></td>
              <td>
                <%= link_to("Edytuj", {:controller => 'workers', :action => :edit, :id => pracownik.id}, class: 'btn btn-xs btn-success') %>
                <%= link_to("Usuń", {:controller => 'workers', :action => :delete, :id => pracownik.id}, class: 'btn btn-xs btn-danger') %>
              </td>

            </tr>
        <% end %>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12 button-new">
      <%= link_to("Dodaj nowe użytkownika", {:controller => "workers", :action => "new"}, :class => "btn btn-large btn-info") %>
    </div>
  </div>
</div>