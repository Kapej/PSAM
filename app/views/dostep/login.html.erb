<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <%= image_tag "us/lol.jpg", height: 200, width: 300, class: "center-block" %>
    </div>
  </div>
  <div class="row login-site">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
      <%= form_tag(:action => 'logowanie') do %>
          <table>
            <tr>
              <td><%= label_tag(:uzytkownik, "Użytkownik: ", class: "user-label") %></td>
              <td><%= text_field_tag('uzytkownik', nil, class: 'form-control user-tag')%></td>
            </tr>
            <tr>
              <td><%= label_tag(:haslo, "Hasło: ") %></td>
              <td><%= password_field_tag('haslo', nil, class: 'form-control') %></td>
            </tr>
            <tr>
              <td>&nbsp;</td>
              <td><%= submit_tag("Zaloguj", class: "btn btn-large btn-info login-submit") %></td>
            </tr>
          </table>
      <% end %>
    </div>
    <div class="col-lg-4"></div>
  </div>
</div>