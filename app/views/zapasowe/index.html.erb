<h1>Pracownicy</h1>

<% content_for :title do %>
    <title>PSAM</title>
<% end %>


<div class="container">

  <% lg=0 %>
    <% @workers.each do |worker| %>
      <% if lg%2==0%>
          <div class="row">
            <div class="col-lg-3 pull-left">
              <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target=<%="#myModal#{lg}"%>>
                <%= image_tag worker.zdjecie.url(:thumb) %>
              </button>
            </div>
          </div>

          <% content_for :boot do %>
              <div class="modal fade" id=<%="myModal#{lg}"%> tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                      <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                    </div>
                    <div class="modal-body">
                      <div class="containter-fluid">
                        <div class="row">
                          <div class="col-lg-3"><p><%= image_tag worker.zdjecie.url(:thumb) %></p></div>
                          <div class="col-lg-3"><p> <%=worker.imie %></p></div>
                          <div class="col-lg-3"><p> <%=worker.nazwisko %></p></div>
                          <div class="col-lg-3"><p><%=worker.email %></p></div>
                        </div>
                        <div class="row">
                          <div class="col-lg-6"><p> <%=worker.staz_pracy %></p></div>
                          <div class="col-lg-6"><p> <%=worker.stanowisko %></p></div>
                        </div>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                      <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                  </div>
                </div>
              </div>
          <% end %>


      <%else%>
          <div class="row">
            <div class="col-lg-3 pull-right">
            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target=<%="#myModal#{lg}"%>>
              <%= image_tag worker.zdjecie.url(:thumb) %>
            </button>
            </div>
          </div>


          <% content_for :modal do %>
              <div id=<%="modal-0#{lg}"%>>
                <!--"THIS IS IMPORTANT! to close the modal, the class name has to match the name given on the ID-->
                <div  id="btn-close-modal" class=<%="close-modal-0#{lg}"%>>
                  CLOSE MODAL
                </div>

                <div class="modal-content">
                  <p><%= worker.imie %></p>
                  <p><%= worker.nazwisko %></p>
                  <p><%= worker.email %></p>
                  <p> <%= worker.staz_pracy %></p>
                  <p><%=worker.zdjecie%></p>

                </div>
              </div>

          <% end %>

          <% content_for :boot do %>
              <div class="modal fade" id=<%="myModal#{lg}"%> tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                      <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                    </div>
                    <div class="modal-body">
                        <div class="containter-fluid">
                          <div class="row">
                            <div class="col-lg-3"><p><%= image_tag worker.zdjecie.url(:thumb) %></p></div>
                            <div class="col-lg-3"><p> <%=worker.imie %></p></div>
                            <div class="col-lg-3"><p> <%=worker.nazwisko %></p></div>
                            <div class="col-lg-3"><p><%=worker.email %></p></div>
                          </div>
                          <div class="row">
                            <div class="col-lg-6"><p> <%=worker.staz_pracy %></p></div>
                            <div class="col-lg-6"><p> <%=worker.stanowisko %></p></div>
                          </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                      <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                  </div>
                </div>
              </div>
          <% end %>

      <%end%>
    <% lg+=1 %>
    <% end %>


</div>


<br>




